.area_buy_rent{
    width:100%;
    margin-bottom:20rpx;

}
.area_title{
    width:99%;
    display: block;
    text-align: center;
    border:#fff 1rpx solid;
    height: 65rpx;
   
}
.area_title .area_tobuy{
    font-size:32rpx;
    float:left;
    width: 50%;
    height: 65rpx;
    display: block;
    line-height: 65rpx;

}
.area_title .area_torent{
    font-size:32rpx;
    float:right;
     width:50%;
     height: 65rpx;
     line-height: 65rpx;
     display:block; 
    
} 
.area_title .text{
    color:#02A9FF;
    border-bottom:#02A9FF 5rpx solid;
}
.area_content{
    width:95%;
    margin:auto;
    border-top:2rpx solid #eee;
    padding-bottom: 20rpx;
}
.area_content .left{
    width:29.6vw;
    margin-top:30rpx;
    display: inline-block;
}
.goods_img{
    width:190rpx;
    height: 120rpx;
}
.area_content .right{
    width:65.3vw;
    margin-top:30rpx;
    float:right;
}
.area_content .right .title{
    width:63vw;
    font-weight: bold;
    font-size:26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 6rpx;
}   
.area_content .right .desc{
    width:63vw;
    font-size:24rpx;
    color:#999;
    line-height: 45rpx;
}
.area_content .right .price{
    float:right;
    color:red;
    font-weight: bold;
    font-size:30rpx;
}
.area_content .right .address{
    width:63vw;
    font-size:24rpx;
    color:#999;
    line-height: 45rpx;
}
.area_content .right .address image{
    width:40rpx;
    height: 40rpx;
    float:right;
    margin-right: 10rpx;
}
.area_content .right .prop{
    width:63vw; 
    margin-top: 10rpx;
}
button{
    box-sizing: none;
}
.area_content .right .prop text{
    padding:0;
    margin:0;
    font-size:20rpx;
    width: auto;
    line-height: 33rpx;
    margin-left:10rpx;
    color:#BDE1C1;
    float:left;
    border-radius: 10rpx;
    padding-left:8rpx;
    padding-right:8rpx;
}
.area_content .right .prop text.prop1{
    margin-left:0;
    color:#ec843b;
    background-color: #f5e1e3;
}
.area_content .right .prop text.prop2{
    color:#2fc48d;
    background-color:#e1f5ee;
}   
.area_content .right .prop text.prop3{
    color:#f05858;
    background-color:#f5e1e1;
}
.area_content .right .prop text.prop4{
    color:#429de5;
    background-color:#e1ecf5;
}
